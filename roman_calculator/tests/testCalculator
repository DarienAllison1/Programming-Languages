import pytest
from src.calculator import calculate

def test_addition():
    assert calculate("(VII + V) * II + I") == "XXV"

def test_large_number():
    assert calculate("MMMM") == "You’re going to need a bigger calculator."

def test_unparseable_input():
    assert calculate("ABC") == "I don’t know how to read this."

def test_zero_case():
    assert calculate("V - V") == "0 does not exist in Roman numerals."

def test_negative_case():
    assert calculate("V - X") == "Negative numbers can’t be represented in Roman numerals."

def test_fraction_case():
    assert calculate("V / II") == "There is no concept of a fractional number in Roman numerals."
